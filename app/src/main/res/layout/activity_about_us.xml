<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AboutUsActivity">

    <ScrollView

        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                app:drawableBottomCompat="@drawable/companylogo" />

            <TextView

                android:id="@+id/aboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:letterSpacing=".2"
                android:paddingStart="15dp"
                android:paddingTop="40dp"
                android:paddingEnd="0dp"
                android:paddingBottom="10dp"
                android:singleLine="false"
                android:text="@string/about"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="30dp"
                android:paddingTop="30dp"
                android:paddingEnd="25dp">

                <androidx.cardview.widget.CardView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/black"
                    app:cardCornerRadius="10dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView

                            android:id="@+id/marko"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/black"
                            android:contentDescription="@string/error"
                            android:paddingStart="25dp"
                            android:paddingEnd="25dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/marko" />

                        <TextView

                            android:id="@+id/mynameismarko"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/strait"
                            android:includeFontPadding="false"
                            android:letterSpacing=".3"
                            android:paddingStart="0dp"
                            android:paddingTop="25dp"
                            android:paddingEnd="0dp"
                            android:paddingBottom="15dp"
                            android:singleLine="false"
                            android:text="@string/marko"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/black"
                    app:cardCornerRadius="10dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView

                            android:id="@+id/nico"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/black"
                            android:contentDescription="@string/error"
                            android:paddingStart="25dp"
                            android:paddingEnd="25dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/nico"/>

                        <TextView

                            android:id="@+id/mynameisnico"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/strait"
                            android:includeFontPadding="false"
                            android:letterSpacing=".3"
                            android:paddingStart="0dp"
                            android:paddingTop="25dp"
                            android:paddingEnd="0dp"
                            android:paddingBottom="15dp"
                            android:singleLine="false"
                            android:text="@string/nico"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView

                android:id="@+id/thanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/strait"
                android:letterSpacing=".1"
                android:autoLink="web"
                android:lineSpacingExtra="16sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorLink="@color/progressempty"
                android:textSize="16sp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>